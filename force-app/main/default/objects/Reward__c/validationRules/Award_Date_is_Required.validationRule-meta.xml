<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Award_Date_is_Required</fullName>
    <active>true</active>
    <description>Award Date is required for Earn record type.</description>
    <errorConditionFormula>IF( 
