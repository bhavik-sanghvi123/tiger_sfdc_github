<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Remarks_is_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(  ISCHANGED(isVoid__c ) , isVoid__c ,
 ISBLANK( Remarks__c ) 
)</errorConditionFormula>
