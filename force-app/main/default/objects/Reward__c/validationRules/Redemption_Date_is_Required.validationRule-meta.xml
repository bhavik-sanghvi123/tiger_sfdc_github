<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Redemption_Date_is_Required</fullName>
    <active>true</active>
    <description>Redemption Date is Required for Redeem record type</description>
    <errorConditionFormula>IF( 
