<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Required_Escalated_to</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL( Status , &quot;Escalated&quot;),
  ISBLANK(EscalatedTo__c)
)</errorConditionFormula>
    <errorMessage>&apos;Escalated To&apos; field must be populated when Status is set to Escalated.</errorMessage>
</ValidationRule>
